<section id="post" class="post">
  <arcile class="post">

    <h1 class="post_title">
      <%= @post.title %>
    </h1>

    <div class="post content">
      <%= @post.contet.html_safe%>
    </div>

  </arcile>
  <%= form_for @post.comments.new url: {action: "add_comment"} do |f| %>
    Title<%= f.text_field :title%><br>

    Comment<%= f.text_area :comment %><br>
    <%= f.submit 'Add Comment' %>
  <% end  %>

</section>
